<?xml version="1.0"?>
<ruleset name="Icon">
  <description>Icon PHP CodeSniffer</description>
  <rule ref="WordPress"/>

  <!-- Sensible exclude -->
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/web/wp/*</exclude-pattern>

  <!-- Limit extensions -->
  <arg name="extensions" value="php"/>
</ruleset>